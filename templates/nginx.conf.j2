user  nginx;
worker_processes  1;

error_log  /var/log/nginx/error.log;

pid        /run/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;
    sendfile        on;
    keepalive_timeout  0;

    {% if dork_wildcard_domain is defined %}
    server {
      server_name ~^(?<project>[a-zA-Z0-9-_]+).{{ dork_wildcard_domain }}$;
      listen 80 default_server;

      location ~^\/?(?<path>.*)$ {
        resolver localhost;
        proxy_pass http://$project.$project.dork:80/$path?$args;
        proxy_set_header X-Dork-Host $http_host;
        proxy_set_header X-Dork-IP $remote_addr;
        proxy_set_header X-Dork-Path '';
        {% if dork_restrict_access is defined %}
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd-$project;
        {% endif %}
      }
    }

    server {
      server_name ~^([?<instance>a-zA-Z0-9-_]+).(?<project>[a-zA-Z0-9-_]+).{{ dork_wildcard_domain }}$;
      listen 80 default_server;

      location ~^\/?(?<path>.*)$ {
        resolver localhost;
        proxy_pass http://$project.$instance.dork:80/$path?$args;
        proxy_set_header X-Dork-Host $http_host;
        proxy_set_header X-Dork-IP $remote_addr;
        proxy_set_header X-Dork-Path '';
        {% if dork_restrict_access is defined %}
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd-$project;
        {% endif %}
      }
    }
    {% else %}
    server {
      server_name _;
      listen 80 default_server;

      location ~^\/(?<project>[a-zA-Z0-9-_]+)(\/(?<path>.*))?$ {
        resolver localhost;
        proxy_pass http://$project.$project.dork:80/$path?$args;
        proxy_set_header X-Dork-Host $http_host;
        proxy_set_header X-Dork-IP $remote_addr;
        proxy_set_header X-Dork-Path $project;
        {% if dork_restrict_access is defined %}
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd-$project;
        {% endif %}
      }

      location ~^\/(?<project>[a-zA-Z0-9-_]+)\.(?<instance>[a-zA-Z0-9-_]+)(\/(?<path>.*))?$ {
        resolver localhost;
        proxy_pass http://$project.$instance.dork:80/$path?$args;
        proxy_set_header X-Dork-Host $http_host;
        proxy_set_header X-Dork-IP $remote_addr;
        proxy_set_header X-Dork-Path $project.$instance;
        {% if dork_restrict_access is defined %}
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd-$project;
        {% endif %}
      }
    }
    {% endif %}
}
